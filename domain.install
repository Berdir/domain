<?php

/**
 * @file
 * Install, update and uninstall functions for the domain module.
 */

/**
 * Implements hook_schema().
 */
function domain_schema() {
  $schema['domain'] = array(
    'description' => 'Stores domain records.',
    'fields' => array(
      'domain_id' => array(
        'type' => 'serial',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'description' => 'Domain numeric id.'
      ),
      'uuid' => array(
        'description' => 'Unique Key: Universally unique identifier for this entity.',
        'type' => 'varchar',
        'length' => 128,
        'not null' => FALSE,
      ),
      'hostname' => array(
        'type' => 'varchar',
        'length' => '255',
        'not null' => TRUE,
        'default' => '',
        'description' => 'Registered DNS entry, will match HTTP_HOST requests'
      ),
      'name' => array(
        'type' => 'varchar',
        'length' => '255',
        'not null' => TRUE,
        'default' => '',
        'description' => 'Site display name'
      ),
      'scheme' => array(
        'type' => 'varchar',
        'length' => '8',
        'not null' => TRUE,
        'default' => 'http',
        'description' => 'Default protocol'
      ),
      'status' => array(
        'type' => 'varchar',
        'length' => '1',
        'not null' => TRUE,
        'default' => '1',
        'description' => 'Active status'
      ),
      'weight' => array(
        'type' => 'int',
        'unsigned' => FALSE,
        'not null' => TRUE,
        'default' => 0,
        'description' => 'Sort order'
      ),
      'is_default' => array(
        'type' => 'int',
        'size' => 'tiny',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
        'description' => 'Indicates primary domain'
      ),
      'machine_name' => array(
        'type' => 'varchar',
        'length' => '255',
        'not null' => TRUE,
        'default' => '',
        'description' => 'The machine name for this domain.'
      ),
    ),
    'primary key' => array('domain_id'),
    'indexes' => array(
      'hostname' => array('hostname'),
      'weight' => array('weight'),
      'is_default' => array('is_default'),
    ),
    'unique keys' => array(
      'machine_name' => array('machine_name'),
      'uuid' => array('uuid'),
    ),
    'foreign_keys' => array(),
  );
  return $schema;
}

/**
 * Implements hook_field_schema().
 */
function domain_field_schema($field) {
  $columns = array(
    'all_affiliates' => array(
      'type' => 'int',
      'not null' => FALSE,
    ),
  );
  return array(
    'columns' => $columns,
  );
}

/**
 * Implements hook_uninstall().
 */
function domain_uninstall() {
  // Remove actions.
  if (db_table_exists('actions')) {
    db_delete('actions')->condition('type', 'domain')->execute();
  }
}
